      <tr><td style="width: 100%;">

        <table style="background-color: #ffffff; border-radius: 10px; width: 935px;">
          <tr>
            <td style="padding-bottom: 20px; padding-top: 10px; padding-left: 10px;"><img src="cid:logo.png"></td>

            <!-- HEADER MESSAGE -->
            <td style="padding-left: 30px; padding-bottom: 20px; padding-top: 10px;"><h2>Welcome to XXXXXXXXXX!</h2></td>


            <td style="padding-bottom: 20px; padding-top: 10px; padding-left: 10px;">

            </td>
          </tr>

          <tr>
            <td style="text-align: center; padding-top: 20px;" valign="top">


            </td>
